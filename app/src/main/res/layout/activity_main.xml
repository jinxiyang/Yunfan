<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/gray_content_background"
    tools:context="com.yang.yunfan.ui.main.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:background="?attr/white_content_background"
        app:itemIconTint="@color/main_navigation_color"
        app:itemTextColor="@color/main_navigation_color"
        app:menu="@menu/main_bottom_navigation_menu"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/bnv_navigation"
        android:background="?attr/gray_line_color"/>

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/line"
        android:background="?attr/gray_content_background"
        />

</RelativeLayout>

