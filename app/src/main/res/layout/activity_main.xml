<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/grayContentBackground"
    tools:context="com.yang.yunfan.ui.main.MainActivity">

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/whiteContentBackground"
        app:bb_activeTabColor="@android:color/holo_red_light"
        app:bb_inActiveTabColor="@android:color/darker_gray"
        app:bb_showShadow="false"
        app:bb_tabXmlResource="@xml/main_bottombar" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/bottomBar"
        android:background="?attr/grayLineColor"/>


    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/line"
        android:background="?attr/grayContentBackground"
        />

</RelativeLayout>

