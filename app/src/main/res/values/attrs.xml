<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="whiteContentBackground" format="color|reference"/>
    <attr name="grayContentBackground" format="color|reference"/>
    <attr name="blackTextColor" format="color|reference"/>
    <attr name="grayTextColor" format="color|reference"/>
    <attr name="whiteTextColor" format="color|reference"/>
    <attr name="grayLineColor" format="color|reference"/>
    <attr name="grayStatusColor" format="color|reference"/>
    <attr name="whiteStatusColor" format="color|reference"/>
    <attr name="whiteTitleBarColor" format="color|reference"/>

    <declare-styleable name="ImageTextItemView">
        <attr name="itemText" format="string" />
        <attr name="bottomLine" format="enum">
            <enum name="gone" value="0" />
            <enum name="show" value="1" />
        </attr>

        <!--设置是否有红点-->
        <attr name="redDot" format="enum">
            <enum name="has" value="0"/>
            <enum name="non" value="1"/>
        </attr>
    </declare-styleable>
</resources>