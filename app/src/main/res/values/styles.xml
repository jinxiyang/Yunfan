<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:textColor">@color/textColor</item>

        <item name="white_content_background">@color/whiteContentBackground</item>
        <item name="gray_content_background">@color/grayContentBackground</item>
        <item name="black_text_color">@color/blackTextColor</item>
        <item name="gray_text_color">@color/grayTextColor</item>
        <item name="white_text_color">@color/whiteTextColor</item>
        <item name="gray_line_color">@color/grayLineColor</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme"></style>

    <style name="NewsChannelAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
